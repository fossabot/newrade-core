<!DOCTYPE html>
<html lang="en">
  <body>
    <!-- INLINE STYLES -->
    <%= htmlWebpackPlugin.files.css
     .map(css => `<style>${compilation.assets[css.substr(htmlWebpackPlugin.files.publicPath.length)].source()}</style>`).join('')
     %>

    <div id="figma-plugin"></div>

    <!-- INLINE SCRIPT -->
    <%= htmlWebpackPlugin.files.js
      .map(js => `<script defer>${compilation.assets[js.substr(htmlWebpackPlugin.files.publicPath.length)].source()}</script>`).join('')
    %>
  </body>
</html>
