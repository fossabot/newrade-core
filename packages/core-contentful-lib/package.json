{
  "name": "@newrade/core-contentful-lib",
  "version": "1.10.5",
  "description": "Scripts and models to interact with Contentful APIs and SDKs.",
  "author": {
    "email": "info@newrade.ca",
    "name": "Newrade",
    "url": "https://github.com/newrade/newrade"
  },
  "repository": {
    "directory": "packages/core-contentful-lib",
    "type": "git",
    "url": "https://github.com/newrade/newrade-core.git"
  },
  "license": "MIT",
  "main": "dist/newrade-core-contentful-lib.cjs.js",
  "module": "dist/newrade-core-contentful-lib.esm.js",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "yarn tsc:types && yarn swc:build && yarn swc:build:commonjs && yarn rename:commonjs",
    "clean": "yarn clean:dist && yarn clean:tsc",
    "clean:dist": "rimraf -rf dist/**",
    "clean:tsc": "rimraf -f ./**/*.tsbuildinfo *.tsbuildinfo",
    "rename:commonjs": "renamer --chain ../core-node-utils/src/scripts/rename-cjs-extension.js \"./dist/cjs/**/*\"",
    "rename:watch": "nodemon --delay 1000ms --watch dist/cjs --ext js --exec \"yarn rename:commonjs\"",
    "prestart": "yarn build",
    "start": "concurrently \"yarn tsc:types:watch\" \"yarn swc:build:watch\" \"yarn swc:build:commonjs:watch\" \"yarn rename:watch\"",
    "swc:build": "swc ./src --config-file ../../.swcrc --source-maps --ignore **/__test__/**/* --out-dir dist",
    "swc:build:commonjs": "yarn swc:build --config-file ../../.swcrc-commonjs --out-dir dist/cjs",
    "swc:build:commonjs:watch": "yarn swc:build:commonjs --watch",
    "swc:build:watch": "yarn swc:build --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests --watch",
    "tsc:typecheck": "tsc --noEmit",
    "tsc:types": "yarn tsc -b",
    "tsc:types:watch": "yarn tsc:types --watch --preserveWatchOutput"
  },
  "dependencies": {
    "@newrade/core-design-system": "*",
    "@newrade/core-jest-config": "*",
    "@newrade/core-node-utils": "*",
    "@newrade/core-website-api": "*",
    "case": "^1",
    "contentful-migration": "^2.0.4",
    "fp-ts": "^2.11.1",
    "io-ts": "^2"
  }
}
